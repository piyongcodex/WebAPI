{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.AspNetCore.Authentication": "Debug",
            "Microsoft.IdentityModel": "Debug"
        }
    },
    "ConnectionStrings": {
        "DefaultConnection": "Server=mysql;Port=3306;Database=userdb;User=root;Password=admin;AllowPublicKeyRetrieval=True;SslMode=None;"
    },
    "Serilog": {
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "Properties": {
            "Application": "CQRSpattern.API",
            "Environment": "Development"
        },
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq", "Serilog.Sinks.Elasticsearch" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/info-log-.json",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "restrictedToMinimumLevel": "Information"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/error-log-.json",
                    "rollingInterval": "Day",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "restrictedToMinimumLevel": "Error"
                }
            },
            {
                "Name": "Seq",
                "Args": {
                    "serverUrl": "http://localhost:8081"
                }
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://localhost:9200",
                    "indexFormat": "cqrspattern-logs-{0:yyyy.MM.dd}",
                    "autoRegisterTemplate": true,
                    "numberOfShards": 2,
                    "numberOfReplicas": 1
                }
            }

        ]
    },
    "Keycloak": {
        "Authority": "http://keycloak:8080/realms/piyongx-realm",
        "Audience": "CQRSpattern.API",
        "ClientSecret": "srecIHGwF2KTvQLJKXZoPOPdZi3OmdWM",
        "RequireHttpsMetadata": false,
        "ValidIssuers": [
            "http://localhost:8080/realms/piyongx-realm",
            "http://keycloak:8080/realms/piyongx-realm"
        ],
        "ValidAudiences": [
            "CQRSpattern.API",
            "account"
        ]
    }
}
